<% layout('layouts/boilerplate')%>

<div class="col-md-9 m-auto">
    <h1>New Campground</h1>
    <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
    
        <div class="col-md-12">
            <label class="form-label mb-3" for="title">Title</label>
            <input class="form-control mb-3" type="text" id="title" name="campground[title]" required>
        </div>
        <div class="col-md-12">
            <label class="form-label mb-3" for="location">Location</label>
            <input class="form-control mb-3" type="text" id="location" name="campground[location]" required>
        </div>
        <input type="file" name="image" multiple>
        <!-- <div class="col-md-12">
            <label class="form-label mb-3" for="image">Image URL</label>
            <input class="form-control mb-3" type="text" id="image" name="campground[image]" required>
        </div> -->
        <div class="form-label mb-3" >
            <label for="price">Price</label>
        </div>
       
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control" id="price" class="price" name="campground[price]" required>
            <div class="input-group-append">
              <span class="input-group-text">.00</span>
            </div>
          </div>
        <div class="col-md-12">
            <label class="form-label mb-3" for="description">Description</label>
            <textarea class="form-control mb-3" name="campground[description]" id="description" cols="30" rows="10" required></textarea>
        </div>
        <button class= "btn btn-success mb-3" type="submit">Submit</button>

    </form>
    <a href="/campgrounds">All Campgrounds</a>
</div>

