<% layout('layouts/boilerplate') %>
<h1>Register a new user!</h1>
<form action="/register" class="validated-form" novalidate method="post">
    <div class="col-md-12">
        <label class="form-label mb-3" for="username">Username</label>
        <input class="form-control mb-3" type="text" id="username" name="username" required>
        <div class="valid-feedback">
           Looks Good!
        </div>
    </div>
    <div class="col-md-12">
        <label class="form-label mb-3" for="email">Email</label>
        <input class="form-control mb-3" type="email" id="email" name="email" required>
        <div class="valid-feedback">
           Looks Good!
        </div>
    </div>
    <div class="col-md-12">
        <label class="form-label mb-3" for="password">Password</label>
        <input class="form-control mb-3" type="password" id="password" name="password" required>
        <div class="valid-feedback">
           Looks Good!
        </div>
    </div>
    <button class="btn btn-success">Submit</button>
</form>